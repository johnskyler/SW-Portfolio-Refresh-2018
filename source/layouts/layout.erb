  </head>
  <body class="palette-white-bg site-width">
	  <section id="primary-header" class="section-grey palette-tone2-bg">
			<div id="explain-wrapper" >
				<!-- <a id="explain-link" class="animation-hint-text-onsolid palette-static-fg" href="#explain">Explain, please?</a> -->
				<div class="animation-hint-text">
					<%= partial "explainplease" %>
				</div>
			</div>
			<div id="sundial-wrapper" class="content-width">
				<%= partial "sundial" %>
      </div>
      <div id="intro-text-wrapper" class="intro-text-wrapper content-width">
        <span class="intro-text fonts-intro-text palette-white-fg palette-tone1-bg">Skyler Wagner is a UX and UI Designer, Creative Director, & shape witch.</span>
      </div>
      <div class="drag-indicator-container content-width">
        <div class="content-half-width">
          <%#= partial "drag_indicator" %>
        </div>
      </div>
	  </section>
		<section class="section-separator palette-tone2-bg" />
		<%= yield %>
		<div class="palette-tone2-bg">
			<div class="skylermadethis-wrapper palette-white-bg">
				<a class="skylermadethis  palette-static-fg" href="#skylermadethis">#Skylermadethis </a>
			</div>
		</div>
