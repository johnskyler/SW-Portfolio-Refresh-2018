  <body class="palette-white-bg site-width">
    <section id="project-detail">

      <div class="palette-tone2-border">
        <div class="palette-tone1-border">
          <div class="project-detail-container palette-tone1-border">

            <div class="project-detail-content content-width">

              <div class="project-close-btn-wrapper palette-tone1-border">
                <div class="project-close-btn palette-tone1-border palette-white-bg">
                  <a href="/portfolio/" class="palette-tone1-fg">⇽ Close</a>
                </div>
              </div>

              <div class="project-detail-title-shape">
                <%= partial "casestudy_circle" %>
              </div>

              <div class="project-detail-title content-width">
                <div>
                  <span class="intro-text fonts-intro-text palette-white-fg palette-tone1-bg">
                    <%= current_page.data.title %>
                  </span>
                </div>
              </div>

              <ul class="project-detail-categories">
                <% current_page.data.category.each do |cat| %>
                  <li class="palette-tone1-fg">#<%= cat %></li>
                <% end %>
              </ul>
              <div class="palette-black-fg">
                <%= yield %>
              </div>

            </div>

            <section id="endpage-buttons" class="section-white palette-white-bg">
              <div class="content-width">
                <ul class="button-list content-half-width">
                  <!--    <li class="color2-border"><a href="" class="color2-fg">Download Resume as a PDF</a></li>-->
                  <li class="palette-tone1-border"><a href="/portfolio/" class="palette-tone1-fg">View Portfolio</a></li>
                  <li class="palette-tone1-border"><a href="/" class="palette-tone1-fg">View Bio and Resume</a></li>
                  <li class="palette-tone1-border"><a href="mailto:sjw@skylerwagner.com" class="palette-tone1-fg">Contact Skyler</a></li>
                </ul>
              </div>
            </section>

          </div>
        </div>
      </div>
